<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/layoutWithPercentageDrawable"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circle_drawable"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageViewCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/percentage" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_issue"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        tools:text="issue"
        android:layout_alignTop="@+id/layoutWithPercentageDrawable"
        android:layout_toEndOf="@+id/layoutWithPercentageDrawable"
        android:layout_toRightOf="@+id/layoutWithPercentageDrawable"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_issue_assignee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="Asignee"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tv_issue"
        android:layout_alignLeft="@+id/tv_issue"
        android:layout_alignStart="@+id/tv_issue"/>

    <TextView
        android:id="@+id/tv_issue_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="Percentage"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />



</RelativeLayout>