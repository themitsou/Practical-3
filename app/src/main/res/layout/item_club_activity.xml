<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/layoutWithCircleDrawable"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circle_drawable"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageViewCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_issue" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_club_activity_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/tv_club_activity_short_note"
        android:layout_alignStart="@+id/tv_club_activity_short_note"
        android:layout_alignTop="@+id/layoutWithCircleDrawable"
        android:textSize="16sp"
        tools:text="Club Activity Title" />

    <TextView
        android:id="@+id/tv_club_activity_short_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_club_activity_title"
        android:layout_toEndOf="@+id/layoutWithCircleDrawable"
        android:layout_toRightOf="@+id/layoutWithCircleDrawable"
        android:textSize="12sp"
        tools:text="A very short note goes here" />


    <TextView
        android:id="@+id/tv_club_activity_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        tools:text="16/05/2016" />

</RelativeLayout>